# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index
GET     /user/:id                   controllers.UserController.show(id:Long)
GET     /users                      controllers.UserController.index

GET     /expenses                   controllers.ExpenseReportController.index
GET     /expense/:id                controllers.ExpenseReportController.show(id:Long)
# Authentication
GET     /login                      controllers.Application.login
POST    /authenticate               controllers.Application.authenticate
GET     /logout                     controllers.Application.logout
GET 	/openIDCallback				controllers.Application.openIDCallback

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
