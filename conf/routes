# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index
GET     /users                      controllers.UserController.index

GET     /expenses                   controllers.ExpenseReportController.index
GET     /expenses/:id               controllers.ExpenseReportController.show(id:String)
POST    /expenses                   controllers.ExpenseReportController.create
PUT     /expenses/:id               controllers.ExpenseReportController.update(id:Option[String])

POST    /evidences                  controllers.EvidenceController.create
# Authentication
GET     /login                      controllers.Application.login
POST    /authenticate               controllers.Application.authenticate
GET     /logout                     controllers.Application.logout
GET 	/openIDCallback				controllers.Application.openIDCallback

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
